# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "us-west-2"
project_name = "gr3-entity-search"
environment = "production"

# Network Configuration
vpc_cidr = "10.0.0.0/16"
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]

# Security
ssh_allowed_cidrs = ["YOUR_IP_ADDRESS/32"]  # Replace with your IP
key_pair_name = "your-key-pair-name"         # Create this in AWS Console first

# Instance Configuration
ami_id = "ami-0c02fb55956c7d316"  # Amazon Linux 2023 (us-west-2)
instance_type = "t3.medium"
app_port = 8080

# Auto Scaling
min_instances = 1
max_instances = 3
desired_instances = 2

# Database Configuration (these should be secured)
db_host = "your-database-host.amazonaws.com"
db_name = "gr3_entity_db"
db_user = "your_db_username"
db_password = "your_secure_password"

# Other Settings
enable_deletion_protection = false
log_retention_days = 14